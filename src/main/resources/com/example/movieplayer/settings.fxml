<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="182.0" prefWidth="377.0" style="-fx-background-color: black;" styleClass="anchorPane" stylesheets="@Style/settings.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieplayer.SettingsController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="1080.0">
               <children>
                  <Label text="Settings" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <Label text="Speed:" textFill="WHITE" />
                  <Button mnemonicParsing="false" onAction="#speed05" text="0.5x" />
                  <Button layoutX="302.0" layoutY="48.0" mnemonicParsing="false" onAction="#speed075" text="0.75x" />
                  <Button layoutX="328.0" layoutY="48.0" mnemonicParsing="false" onAction="#speed1" text="1x" />
                  <Button layoutX="354.0" layoutY="48.0" mnemonicParsing="false" onAction="#speed15" text="1.5x" />
                  <Button layoutX="380.0" layoutY="48.0" mnemonicParsing="false" onAction="#speed2" text="2x" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="110.0" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
               <children>
                  <Label text="Intervals:" textFill="WHITE" />
                  <Button mnemonicParsing="false" onAction="#skip5" text="5s" />
                  <Button mnemonicParsing="false" onAction="#skip10" text="10s" />
                  <Button mnemonicParsing="false" onAction="#skip15" text="15s" />
                  <Button mnemonicParsing="false" onAction="#skip30" text="30s" />
                  <Button mnemonicParsing="false" onAction="#skip60" text="1m" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="330.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="buttonClose" alignment="CENTER" mnemonicParsing="false" onAction="#closeSettingsDialog" text="Save" textAlignment="CENTER" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
